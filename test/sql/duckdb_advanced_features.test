# Test 1: DuckDB-specific syntax parsing
# ======================================

query III
SELECT type, name, peek
FROM parse_ast('
SELECT 
    list_transform([1,2,3], x -> x * 2) as doubled,
    struct_pack(name := ''John'', age := 30) as person,
    map {''key1'': ''value1'', ''key2'': ''value2''} as my_map
', 'duckdb')
WHERE type = 'function_call'
ORDER BY name;
