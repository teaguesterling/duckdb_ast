6

# Test 7: Get nodes at different depths
query II
SELECT 
    json_extract(je.value, '$.depth') as depth,
    COUNT(*) as count
FROM read_ast_objects('test/data/python/simple.py', 'python') AS ast,
     json_each(ast.nodes) AS je
GROUP BY depth
ORDER BY depth
LIMIT 5;
----
